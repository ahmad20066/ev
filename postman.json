{
    "info": {
        "name": "Survey API Collection",
        "description": "CRUD for surveys, questions, and answers",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Survey",
            "request": {
                "method": "POST",
                "url": "{{url}}/surveys",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Customer Satisfaction\",\n  \"package_id\": 1\n}"
                }
            }
        },
        {
            "name": "Get All Surveys",
            "request": {
                "method": "GET",
                "url": "{{url}}/surveys"
            }
        },
        {
            "name": "Get Survey",
            "request": {
                "method": "GET",
                "url": "{{url}}/surveys/:id"
            }
        },
        {
            "name": "Update Survey",
            "request": {
                "method": "PUT",
                "url": "{{url}}/surveys/:id",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Updated Survey Title\"\n}"
                }
            }
        },
        {
            "name": "Delete Survey",
            "request": {
                "method": "DELETE",
                "url": "{{url}}/surveys/:id"
            }
        },
        {
            "name": "Create Question",
            "request": {
                "method": "POST",
                "url": "{{url}}/questions",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"What is your favorite color?\",\n  \"image\": null,\n  \"survey_id\": 1\n}"
                }
            }
        },
        {
            "name": "Get Questions for Survey",
            "request": {
                "method": "GET",
                "url": "{{url}}/surveys/:surveyId/questions"
            }
        },
        {
            "name": "Submit Answer",
            "request": {
                "method": "POST",
                "url": "{{url}}/answers",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"qustion_id\": 1,\n  \"answer\": \"Blue\"\n}"
                }
            }
        }
    ]
}